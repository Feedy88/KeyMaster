<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
	../UI.xsd">
	<Button name="KeyMasterButtonTemplate" virtual="true">
		<Size x="25" y="25"/>
		<Scripts>
			<OnClick>
				KeyMaster:Button_OnClick(self, button)
			</OnClick>
			<OnEnter>
				KeyMaster:Button_OnEnter(self)
			</OnEnter>
			<OnLeave>
				KeyMaster:Button_OnLeave(self)
			</OnLeave>
		</Scripts>
	</Button>
    <Frame name="KeyMasterFrame" toplevel="true" movable="true" enableMouse="true" resizable="false" frameStrata="MEDIUM" inherits="BackdropTemplate" virtual="true">
		<Size x="768" y="768"/>
		<Anchors>
			<!-- <Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER">
				<Offset x="0" y="0"/>
			</Anchor> -->
		</Anchors>
		<Layers>
            <Layer level="BACKGROUND">
            </Layer>
            <Layer level="ARTWORK">
                <!-- <Texture file="Interface\AddOns\KeyMaster\Imgs\lowerleft">
					<Size x="512" y="512"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset x="4" y="4"/>
						</Anchor>
					</Anchors>
				</Texture> -->
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentDragHeader">
				<Size x="0" y="60"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
					<Anchor point="TOPRIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnMouseDown>
						local parent = self:GetParent()
						if parent:IsMovable() then
						parent:StartMoving()
						end
					</OnMouseDown>
					<OnMouseUp>
						local parent = self:GetParent()
						parent:StopMovingOrSizing()
					</OnMouseUp>
				</Scripts>
			</Button>
        </Frames>
        <Scripts>
            <OnLoad>
                tinsert(UISpecialFrames, self:GetName());
            </OnLoad>
			<OnShow>
                PlaySound(SOUNDKIT.IG_SPELLBOOK_OPEN);
				<!-- KeyMaster:Initialize(self); -->
			</OnShow>
			<OnHide>
                PlaySound(SOUNDKIT.IG_SPELLBOOK_CLOSE);
			</OnHide>
		</Scripts>
    </Frame>

</Ui>